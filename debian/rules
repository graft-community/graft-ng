#!/usr/bin/make -f

# Graftlets is buggy and breaks with -Bsymbolic-functions enabled:
export DEB_LDFLAGS_MAINT_STRIP=-Wl,-Bsymbolic-functions

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- -DENABLE_SYSLOG=ON \
		-DCMAKE_CXX_FLAGS="-march=westmere -mtune=haswell -L/usr/lib/$(DEB_HOST_MULTIARCH)/graft.stable -I/usr/include/graft.stable" \
		-DEXTERNAL_CRYPTONODE=ON \
		-DDEBIAN_VERSION_SUFFIX=$(shell dpkg-parsechangelog -SVersion | sed -e 's/[^+-]*[+-]//')-graft.community \
		-DCMAKE_INSTALL_RPATH=/usr/lib/$(DEB_HOST_MULTIARCH)/graft.stable \
		-DGRAFTLET_SYSTEM_DIR=/usr/lib/$(DEB_HOST_MULTIARCH)/graft-supernode/graftlets

override_dh_shlibdeps:
	dh_shlibdeps -l/usr/lib/$(DEB_HOST_MULTIARCH)/graft.stable

override_dh_strip:
	dh_strip --no-ddebs
